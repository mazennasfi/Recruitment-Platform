
<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="stylesheet" href =https://bootswatch.com/4/lux/bootstrap.min.css>
        {% block stylesheets %}{% endblock %}
        
    </head>
    <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <a class="navbar-brand" href="/">Stage-Ing</a>
        {% if app.user %}
         <a style="color:white; " class="navbar-link" href="{{path('security_logout')}}">Deconnexion</a>
        {% endif %}
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        

        <div class="collapse navbar-collapse" id="navbarColor01">
            <ul class="navbar-nav mr-auto">
                        <li class="nav-item">
                <a class="nav-link" href="{{path('ajouter')}}">Ajouter un stage</a>
            </li>

            <li class="nav-item">
                <a class="nav-link" href="{{path('blog')}}">Liste des stages <span class="sr-only">(current)</span></a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="{{path('show')}}">Liste des demandes <span class="sr-only">(current)</span></a>
            </li>


            
            

            </ul>
            
        </div>
    </nav>
    <div class="container">
        {% block body %}
                <section class="stages">



{% for stage in stages %}
<stage>
<br><br>
<table style="width:100%;border: 1px solid black;">
<tr>
<th style="background-color: #f5f5f5;color:black;">Nom de l'entreprise </th>
<th style="background-color: #f5f5f5;color:black;">l'adresse de l'entreprise</th>
<th style="background-color: #f5f5f5;color:black;">la poste vide</th>


</tr>
<tr>
<td style="color:green;">{{stage.nomEntreprise}}</td>
<td style="color:green;">{{stage.adressEntreprise}}</td>
<td style="color:green;">{{stage.poste}}</td>


</tr>


</table>

<button  style="background-color:red;">
<a href="{{path('supp',{'id':stage.id})}}" style="color:white;">Supprimer Stage</a>
</button>



</stage>
{% endfor %}




</section>
        {% endblock %}
    </div>
        {% block javascripts %}


        {% endblock %}
    </body>
</html>